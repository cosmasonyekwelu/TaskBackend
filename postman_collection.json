{
  "info": {
    "name": "TaskBackend - Full API Collection",
    "_postman_id": "taskbackend-full-api",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },

  "variable": [
    { "key": "base_url", "value": "https://taskbackend-10qt.onrender.com/api" },
    { "key": "token", "value": "" },
    { "key": "product_id", "value": "" },
    { "key": "user_id", "value": "" }
  ],

  "item": [

    {
      "name": "Auth",
      "item": [

        {
          "name": "Register",
          "request": {
            "method": "POST",
            "header": [{ "key": "Content-Type", "value": "application/json" }],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"Test User\",\n  \"email\": \"test@example.com\",\n  \"password\": \"StrongPass#2025\"\n}"
            },
            "url": "{{base_url}}/auth/register"
          }
        },

        {
          "name": "Login",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "let res = pm.response.json();",
                  "if (res.data && res.data.accessToken) {",
                  "  pm.collectionVariables.set('token', res.data.accessToken);",
                  "} else {",
                  "  console.log('Token missing in response');",
                  "}"
                ]
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [{ "key": "Content-Type", "value": "application/json" }],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"test@example.com\",\n  \"password\": \"StrongPass#2025\"\n}"
            },
            "url": "{{base_url}}/auth/login"
          }
        },

        {
          "name": "Get Me",
          "request": {
            "method": "GET",
            "header": [{ "key": "Authorization", "value": "Bearer {{token}}" }],
            "url": "{{base_url}}/auth/me"
          }
        },

        {
          "name": "Change Password",
          "request": {
            "method": "POST",
            "header": [
              { "key": "Authorization", "value": "Bearer {{token}}" },
              { "key": "Content-Type", "value": "application/json" }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"currentPassword\": \"StrongPass#2025\",\n  \"newPassword\": \"NewPass#2025\"\n}"
            },
            "url": "{{base_url}}/auth/change-password"
          }
        },

        {
          "name": "Logout",
          "request": {
            "method": "POST",
            "header": [{ "key": "Authorization", "value": "Bearer {{token}}" }],
            "url": "{{base_url}}/auth/logout"
          }
        },

        {
          "name": "Logout All",
          "request": {
            "method": "POST",
            "header": [{ "key": "Authorization", "value": "Bearer {{token}}" }],
            "url": "{{base_url}}/auth/logout-all"
          }
        }
      ]
    },



    {
      "name": "User",
      "item": [

        {
          "name": "Get Profile",
          "request": {
            "method": "GET",
            "header": [{ "key": "Authorization", "value": "Bearer {{token}}" }],
            "url": "{{base_url}}/users/profile"
          }
        },

        {
          "name": "Update Profile",
          "request": {
            "method": "PUT",
            "header": [
              { "key": "Authorization", "value": "Bearer {{token}}" },
              { "key": "Content-Type", "value": "application/json" }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"Updated User\",\n  \"email\": \"updated@example.com\"\n}"
            },
            "url": "{{base_url}}/users/profile"
          }
        },

        {
          "name": "Delete Profile",
          "request": {
            "method": "DELETE",
            "header": [{ "key": "Authorization", "value": "Bearer {{token}}" }],
            "url": "{{base_url}}/users/profile"
          }
        }
      ]
    },



    {
      "name": "Products",
      "item": [

        {
          "name": "Get All Products",
          "request": { "method": "GET", "url": "{{base_url}}/products" }
        },

        {
          "name": "Get Product by ID",
          "request": { "method": "GET", "url": "{{base_url}}/products/{{product_id}}" }
        },

        {
          "name": "Create Product",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "let res = pm.response.json();",
                  "if (res.data && res.data.product) {",
                  "  pm.collectionVariables.set('product_id', res.data.product._id);",
                  "} else { console.log('Product ID not found'); }"
                ]
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              { "key": "Authorization", "value": "Bearer {{token}}" },
              { "key": "Content-Type", "value": "application/json" }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"title\": \"Sample Product\",\n  \"description\": \"Test product\",\n  \"price\": 19.99,\n  \"stock\": 5\n}"
            },
            "url": "{{base_url}}/products"
          }
        },

        {
          "name": "Update Product",
          "request": {
            "method": "PUT",
            "header": [
              { "key": "Authorization", "value": "Bearer {{token}}" },
              { "key": "Content-Type", "value": "application/json" }
            ],
            "body": { "mode": "raw", "raw": "{ \"price\": 25 }" },
            "url": "{{base_url}}/products/{{product_id}}"
          }
        },

        {
          "name": "Delete Product",
          "request": {
            "method": "DELETE",
            "header": [{ "key": "Authorization", "value": "Bearer {{token}}" }],
            "url": "{{base_url}}/products/{{product_id}}"
          }
        }
      ]
    },



    {
      "name": "Admin",
      "item": [

        {
          "name": "Register Admin",
          "request": {
            "method": "POST",
            "header": [
              { "key": "Content-Type", "value": "application/json" }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"Super Admin\",\n  \"email\": \"admin@example.com\",\n  \"password\": \"AdminStrong#2025\"\n}"
            },
            "url": "{{base_url}}/admin/register-admin"
          }
        },

        {
          "name": "List All Users",
          "request": {
            "method": "GET",
            "header": [{ "key": "Authorization", "value": "Bearer {{token}}" }],
            "url": "{{base_url}}/admin/users"
          }
        },

        {
          "name": "Get User by ID",
          "request": {
            "method": "GET",
            "header": [{ "key": "Authorization", "value": "Bearer {{token}}" }],
            "url": "{{base_url}}/admin/users/{{user_id}}"
          }
        },

        {
          "name": "Update User",
          "request": {
            "method": "PUT",
            "header": [
              { "key": "Authorization", "value": "Bearer {{token}}" },
              { "key": "Content-Type", "value": "application/json" }
            ],
            "body": { "mode": "raw", "raw": "{ \"name\": \"Admin Updated User\" }" },
            "url": "{{base_url}}/admin/users/{{user_id}}"
          }
        },

        {
          "name": "Delete User",
          "request": {
            "method": "DELETE",
            "header": [{ "key": "Authorization", "value": "Bearer {{token}}" }],
            "url": "{{base_url}}/admin/users/{{user_id}}"
          }
        },

        {
          "name": "Admin Create Product",
          "request": {
            "method": "POST",
            "header": [
              { "key": "Authorization", "value": "Bearer {{token}}" },
              { "key": "Content-Type", "value": "application/json" }
            ],
            "body": {
              "mode": "raw",
              "raw": "{ \"title\": \"Admin Product\", \"description\": \"Created by admin\", \"price\": 55, \"stock\": 3 }"
            },
            "url": "{{base_url}}/admin/products"
          }
        },

        {
          "name": "Admin Update Product",
          "request": {
            "method": "PUT",
            "header": [
              { "key": "Authorization", "value": "Bearer {{token}}" },
              { "key": "Content-Type", "value": "application/json" }
            ],
            "body": { "mode": "raw", "raw": "{ \"price\": 99 }" },
            "url": "{{base_url}}/admin/products/{{product_id}}"
          }
        },

        {
          "name": "Admin Delete Product",
          "request": {
            "method": "DELETE",
            "header": [{ "key": "Authorization", "value": "Bearer {{token}}" }],
            "url": "{{base_url}}/admin/products/{{product_id}}"
          }
        }
      ]
    }
  ]
}
